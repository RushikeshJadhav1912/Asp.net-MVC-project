<!-- Delete.cshtml -->
@model ASPNETMVCCRUD.Areas.Identity.Data.ApplicationUser

<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #2c3e50;
            color: #ecf0f1;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #3498db;
            text-align: center;
        }

        .form-group {
            width: 50%;
            margin: 20px auto;
            background-color: #34495e;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        p {
            margin: 10px 0;
        }

        strong {
            color: #e74c3c;
        }





          a {
            color: #e74c3c;
            text-decoration: none;
            padding: 5px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s, transform 0.3s;
            display: inline-block;
        }

         a:hover {
                background-color: #c0392b;
                color: #fff;
                transform: rotate(10deg) scale(1.2);
            }

         button {
            color: #e74c3c;
            text-decoration: none;
            padding: 5px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s, transform 0.3s;
            display: inline-block;
        }

           button:hover {
                background-color: #c0392b;
                color: #fff;
                transform: rotate(10deg) scale(1.2);
            }
    </style>

</head>

<form asp-controller="User" asp-action="Delete" method="post">
    <div class="form-group">
        <h1>Are you sure you want to delete this user?</h1>
        <p>Email: <strong>@Model.Email</strong></p>
        <p>Username: <strong>@Model.UserName</strong></p>
        <p>FirstName:<strong>@Model.FirstName</strong></p>
        <p>LastName:<strong>@Model.LastName</strong></p>
        <input type="hidden" asp-for="Id" />
        <button class="two" type="submit">Delete</button> | <a class="one" asp-action="Index">Back to List</a>
    </div>
</form>
